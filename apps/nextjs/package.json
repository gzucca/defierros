{
  "name": "@defierros/nextjs",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "prebuild": "echo \"running prebuild...\" && tsx src/scripts/prebuild.ts",
    "build": "pnpm with-env pnpm run prebuild && pnpm with-env next build",
    "clean": "git clean -xdf .cache .next .turbo node_modules",
    "dev": "pnpm with-env next dev",
    "format": "prettier --check . --ignore-path ../../.gitignore",
    "lint": "eslint",
    "start": "pnpm with-env next start",
    "typecheck": "tsc --noEmit",
    "with-env": "dotenv -e ../../.env --"
  },
  "prettier": "@defierros/prettier-config",
  "dependencies": {
    "@defierros/api": "workspace:*",
    "@defierros/auth": "workspace:*",
    "@defierros/db": "workspace:*",
    "@defierros/env": "workspace:*",
    "@defierros/ui": "workspace:*",
    "@defierros/validators": "workspace:*",
    "@next/env": "^15.1.5",
    "@t3-oss/env-nextjs": "^0.11.1",
    "@tanstack/react-query": "catalog:",
    "@trpc/client": "catalog:",
    "@trpc/react-query": "catalog:",
    "@trpc/server": "catalog:",
    "geist": "^1.3.1",
    "next": "^14.2.15",
    "react": "catalog:react18",
    "react-dom": "catalog:react18",
    "superjson": "2.2.1",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@defierros/eslint-config": "workspace:*",
    "@defierros/prettier-config": "workspace:*",
    "@defierros/tailwind-config": "workspace:*",
    "@defierros/tsconfig": "workspace:*",
    "@types/node": "^20.17.7",
    "@types/react": "catalog:react18",
    "@types/react-dom": "catalog:react18",
    "dotenv-cli": "^7.4.4",
    "eslint": "catalog:",
    "jiti": "^1.21.6",
    "prettier": "catalog:",
    "tailwindcss": "catalog:",
    "tsx": "^4.19.2",
    "typescript": "catalog:"
  }
}
